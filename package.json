{
    "name": "ib-utilities",
    "displayName": "IrishBruse's Utilities",
    "description": "A collection of utilities made by me",
    "icon": "logo.png",
    "repository": {
        "url": "https://github.com/IrishBruse/irishbruse-utilities"
    },
    "publisher": "irishbruse",
    "author": "Ethan Conneely",
    "version": "0.2.1",
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "themes": [
            {
                "label": "Empty Dark Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/empty-dark.json"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "snippetContainer",
                    "title": "Snippet",
                    "icon": "media/icon.png"
                }
            ]
        },
        "views": {
            "snippetContainer": [
                {
                    "id": "snippetView",
                    "name": "Languages"
                }
            ]
        },
        "commands": [
            {
                "command": "ib-utilities.relativeGoTo",
                "title": "Relative goto",
                "shortTitle": "Relative goto"
            },
            {
                "command": "ib-utilities.openSnippet",
                "title": "Open Snippet",
                "shortTitle": "Open"
            },
            {
                "command": "ib-utilities.showSnippetView",
                "title": "Show Snippet View",
                "shortTitle": "Show Snippet View"
            },
            {
                "command": "ib-utilities.openPR",
                "title": "Open Pull Request",
                "shortTitle": "Open PR",
                "icon": "$(github)"
            },
            {
                "command": "ib-utilities.refreshSnippetView",
                "title": "Refresh Snippets",
                "shortTitle": "Refresh",
                "icon": "$(refresh)"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "ib-utilities.openPR",
                    "when": "scmProvider == git",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "ib-utilities.showSnippetView",
                    "when": "view == snippetContainer",
                    "group": "navigation"
                },
                {
                    "command": "ib-utilities.refreshSnippetView",
                    "when": "view == snippetView",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "esbuild": "node esbuild.mjs",
        "watch": "node esbuild.mjs --watch",
        "package": "node esbuild.mjs --production",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "gen:constant": "NODE_NO_WARNINGS=1 node --watch --experimental-transform-types generator.mts"
    },
    "devDependencies": {
        "@types/cjson": "^0.5.3",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.8",
        "esbuild": "0.25.0",
        "eslint": "^8.56.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "cjson": "^0.5.0"
    }
}
